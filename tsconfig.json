{
    "compilerOptions": {
        "outDir": "./public/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES5", "ES2015", "DOM", "ScriptHost"],
        "baseUrl": ".",
        "paths": {
            "*": ["*", "app/*"],
            "redux": ["node_modules/redux-next"]
        }
    },
    "awesomeTypescriptLoaderOptions": {
        "reportFiles": ["app/**/*.{ts,tsx}"],
        "useCache": true
    },
    "include": ["./app/**/*"]
}
